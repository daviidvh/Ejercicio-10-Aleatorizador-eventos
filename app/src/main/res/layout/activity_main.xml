<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="133dp"
        android:layout_height="46dp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.064">

        <ImageButton
            android:id="@+id/btnplay"
            android:layout_width="25dp"
            android:layout_height="22dp"
            android:background="@drawable/play" />

        <ImageButton
            android:id="@+id/btnpausa"
            android:layout_width="29dp"
            android:layout_height="23dp"
            android:background="@drawable/pausa" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imagen"
        android:layout_width="298dp"
        android:layout_height="193dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/campo" />

    <ImageButton
        android:id="@+id/imgDado"
        android:layout_width="154dp"
        android:layout_height="154dp"
        android:layout_marginTop="52dp"
        android:background="@drawable/dado"
        android:scaleType="centerInside"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagen" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="274dp"
        android:layout_height="62dp"
        android:layout_marginTop="64dp"
        android:text="Comienza la aventura, pulsa el dado para avanzar. Cuidado puedes encontrarte enemigos"
        android:textColor="#2B2121"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgDado"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>